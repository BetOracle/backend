# FootyOracle Backend Configuration

# Server Configuration
PORT=5000
DEBUG=True
PREDICTION_DEBUG=True

REQUESTS_PER_MINUTE=8

# Agent Configuration
MOCK_MODE=True
BACKEND_URL=http://localhost:5000

# Database (PostgreSQL required)
DATABASE_URL=

# Football Data API (Optional - for real data)
# Get free API key from https://www.football-data.org/
FOOTBALL_API_KEY=
FOOTBALL_API_URL=https://api.football-data.org/v4

# Get free API key from https://rapidapi.com/api-sports/api/api-football
RAPIDAPI_KEY=
# RAPIDAPI_URL=https://v3.football.api-sports.io
RAPIDAPI_URL=https://api-football-v1.p.rapidapi.com/v3
RAPIDAPI_SEASON=2025

# Disable RapidAPI injuries if you get 403s or want to avoid RapidAPI entirely
INJURIES_ENABLED=False

# CORS (for frontend)
ALLOWED_ORIGINS=http://localhost:3000,https://footyoracle.streamlit.app

# Logging
LOG_LEVEL=INFO